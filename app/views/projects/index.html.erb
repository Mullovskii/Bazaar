<div class="container">

<p id="notice"><%= notice %></p>
<div class="wrapper">


<h1>Проекты</h1>

<div class="btn">
<%= link_to '+ проект', new_project_path %>
</div>

<table class="table table-nonfluid">
  <thead>
    <tr>
      <th>Проект</th>
      <th>Краткое описание</th>


      <th>Раунд</th>
      <th>Фонд</th>
      <th>Заключение</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project, :class=>"country_link" %></td>
        <td><%= simple_format(project.description).gsub(URI.regexp, '<a href="\0">\0</a>').html_safe %></td>
        
          <td><b><%= project.status %></b></td>
        
        
        <td><b><%= project.relation %></b></td>
        <td><%= simple_format(project.summary).gsub(URI.regexp, '<a href="\0">\0</a>').html_safe %></td>


        <td><%= link_to 'Голосовать', project %></td>
<!--         <td><%= link_to 'X', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 -->      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @projects %>
<br>

</div>
</div>

